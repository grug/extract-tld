{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./scripts/**/*.ts"],
  "exclude": ["./src/**/*.test.*"],
}